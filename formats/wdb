#Format for Lego Island World Data Base file
@wdb
number_of_groups I

CHUNK groups number_of_groups
  size_of_string I
  group_title s size_of_string

  CHUNK subgroups 2
    num_sub_items I
    CHUNK sub_items num_sub_items
      size_of_string I
      sub_item_title s size_of_string
      size_of_item I
      item_offset I

      IF INDEX/subgroups 1
        size_of_string I
        presenter_title s size_of_string
        SKIP 37
      ENDIF
    END
  END
END

gif_chunk_size I

RETURN



@gifchunk
num_images I
CHUNK images num_images
  size_of_string I
  gif_name s size_of_string
  width I
  height I
  num_colors I

  CHUNK colors num_colors
    r B
    g B
    b B
  END

  CHUNK rows height
    CHUNK pixels width
      color_index B
    END
  END
END
RETURN




@gif
size_of_string I
gif_name s size_of_string
width I
height I
num_colors I

CHUNK colors num_colors
  r B
  g B
  b B
END

CHUNK rows height
  CHUNK pixels width
    color_index B
  END
END
RETURN




@model
magic_number I
bytes_left_in_subgroup I
version I
SKIP 8
size_of_file_name I
file_name s size_of_file_name
SKIP 8
number_of_components I

#COMPONENT HEADER
CHUNK component_header number_of_components
  size_of_string I
  component_name s size_of_string
  num_coordinates H

  CHUNK coodinate_things num_coordinates
    unknown1 H
    unknown2 H
    unknown3 f
    unknown4 f
    unknown5 f
    SKIP 10
  END
END

IF number_of_components 0
  GOTO NOANIMATIONS
ENDIF

size_of_string I
sub_group_name s size_of_string

CHUNK random_floats 10
  random_float1 f
END

SKIP 9
number_of_components2 I

#COMPONENT
CHUNK components number_of_components2
  size_of_string I
  component_name s size_of_string

  CHUNK random_floats2 10
    random_float2 f
  END

  SKIP 5
  #number of lod models in this component
  number_of_models I
  end_component_offset I

  CHUNK models number_of_models
    SKIP 4
    number_of_parts H
    SKIP 2
    number_of_verts H
    number_of_normals H
    number_of_coordinates H
    SKIP 2

    CHUNK vertices number_of_verts
      x f
      y f
      z f
    END

    CHUNK normals number_of_normals/2
      x f
      y f
      z f
    END

    CHUNK coordinates number_of_coordinates
      u f
      v f
    END

    CHUNK parts number_of_parts
      num_tris H
      num_index_definitions H

      CHUNK indices num_tris
        CHUNK axis 3
          first H
          second H
        END
      END

      num_coordinate_indices I

      CHUNK coordinate_indices num_coordinate_indices/3
        CHUNK axis 3
          coordinate_index I
        END
      END

      part_color_red B
      part_color_green B
      part_color_blue B
      SKIP 8
      size_of_texture_name I
      texture_name s size_of_texture_name
      size_of_material_name I
      material_name s size_of_material_name
    END
  END
  SKIP 4
END

MARKER MODELGIFS
num_images I
SKIP 4
CHUNK images num_images
  size_of_string I
  gif_name s size_of_string
  width I
  height I
  num_colors I

  CHUNK colors num_colors
    r B
    g B
    b B
  END

  CHUNK rows height
    CHUNK pixels width
      color_index B
    END
  END
END


RETURN


MARKER NOANIMATIONS
#COMPONENT
CHUNK components 1
  size_of_string I
  component_name s size_of_string

  CHUNK random_floats2 10
    random_float2 f
  END

  SKIP 5
  #number of lod models in this component
  number_of_models I
  end_component_offset I

  CHUNK models number_of_models
    SKIP 4
    number_of_parts H
    SKIP 2
    number_of_verts H
    number_of_normals H
    number_of_coordinates H
    SKIP 2

    CHUNK vertices number_of_verts
      x f
      y f
      z f
    END

    CHUNK normals number_of_normals/2
      x f
      y f
      z f
    END

    CHUNK coordinates number_of_coordinates
      u f
      v f
    END

    CHUNK parts number_of_parts
      num_tris H
      num_index_definitions H

      CHUNK indices num_tris
        CHUNK axis 3
          first H
          second H
        END
      END

      num_coordinate_indices I

      CHUNK coordinate_indices num_coordinate_indices/3
        CHUNK axis 3
          coordinate_index I
        END
      END

      part_color_red B
      part_color_green B
      part_color_blue B
      SKIP 8
      size_of_texture_name I
      texture_name s size_of_texture_name
      size_of_material_name I
      material_name s size_of_material_name
    END
  END
  SKIP 4
END
GOTO MODELGIFS
